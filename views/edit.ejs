<% include partials/header %>
    <div class='blog-container'>
        <div class='ui main text container segment '>
            <div class='ui huge header'>
                Edit <%= blog.title%>
            </div>
            <form class='ui form' action='/blogs/<%=blog._id%>?_method=PUT' method="POST">
                <div class='field'>
                    <label>Title</label>
                    <input type='text' name='blog[title]' value=<%=blog.title%>>
                </div>
                <div class='field'>
                    <label>Image</label>
                    <input type='text' name='blog[image]' value=<%=blog.image%>>
                </div>
                <div class='field'>
                    <label>Blog post</label>
                    <textarea name='blog[body]' rows='8'><%=blog.body%></textarea>
                </div>
                <button class="ui primary big animated fade button" tabindex="0" type='submit'>
                    <div class="visible content">Post blog</div>
                    <div class="hidden content">
                        <i class="paper plane outline icon"></i>
                    </div>
                </button>
            </form>
        </div>
    </div>
    <%include partials/footer%>